<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ColorPicker.Mobile.MainPage">

    <ContentPage.Resources>
        <Color x:Key = "Primary">#ab3527</Color>
        <Color x:Key = "Secondary">#775752</Color>
        <Color x:Key = "Tertiary">#705c2e</Color>
    </ContentPage.Resources>

    <Grid x:Name="container" BackgroundColor="Black">
        <Frame Margin="10, 0, 10, 0" VerticalOptions="Center" BackgroundColor="White">
            <VerticalStackLayout Spacing="15" VerticalOptions="Center">
                <Label
                    FontAttributes="Bold"
                    FontSize="Large"
                    HorizontalTextAlignment="Center"
                    Text="Colour Maker"
                    TextColor="Black"
                    />
                
                <BoxView
                    Color="Gray"
                    HeightRequest="2"
                    HorizontalOptions="Fill"
                    />

                <Label TextColor="Black" Text="Red Value:" />
                <Slider
                    x:Name="sldRed"
                    ThumbColor="{StaticResource Primary}"
                    MaximumTrackColor="{StaticResource Tertiary}"
                    MinimumTrackColor="{StaticResource Secondary}"
                    ValueChanged="slider_ValueChanged"
                    />

                <Label TextColor="Black" Text="Green Value:" />
                <Slider
                    x:Name="sldGreen"
                    ThumbColor="{StaticResource Primary}"
                    MaximumTrackColor="{StaticResource Tertiary}"
                    MinimumTrackColor="{StaticResource Secondary}"
                    ValueChanged="slider_ValueChanged"
                    />

                <Label TextColor="Black" Text="Blue Value:" />
                <Slider
                    x:Name="sldBlue"
                    ThumbColor="{StaticResource Primary}"
                    MaximumTrackColor="{StaticResource Tertiary}"
                    MinimumTrackColor="{StaticResource Secondary}"
                    ValueChanged="slider_ValueChanged"
                    />

                <Frame CornerRadius="20" HorizontalOptions="Center">
                    <HorizontalStackLayout>
                        <Label
                            x:Name="lblHex"
                            HorizontalTextAlignment="End"
                            Text="Hex value: #000000"
                            VerticalOptions="Center"
                            />
                        <ImageButton
                            Margin="10, 0, 0, 0"
                            HeightRequest="25"
                            VerticalOptions="Center"
                            WidthRequest="25"
                            Source="copy1.svg"
                            BackgroundColor="White"
                            Clicked="ImageButton_Clicked"
                            />
                    </HorizontalStackLayout>
                </Frame>

                <Button 
                     x:Name="btnRandom"
                     BackgroundColor="{StaticResource Primary}"
                     Text="Generate Random Color"
                    Clicked="btnRandomClicked"
                    />
            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>
